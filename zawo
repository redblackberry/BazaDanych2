#include <iostream>
#include <conio.h>
#include <math.h>
#include <stdlib.h>
using namespace std;
int main()
{
	for (;;)
	{
		poczatek:
	int mozliwosc;

	//WYBOR CO POLICZYC
	cout <<"!!!Uzywaj kropki zamiast przecinka!!!"<<endl;
	cout<<"WYBIERZ LICZBE, A NASTEPNIE WSCISNIJ ENTER"<<endl<<"===================================================="<<endl;
	cout<<"WYLICZ:"<<endl;
